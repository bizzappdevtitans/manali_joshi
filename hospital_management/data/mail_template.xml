<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data noupdate="1">
        <!--Email template -->
        <record id="patient_card_email_template" model="mail.template">
            <field name="name">Card:Send By Email</field>
            <field name="model_id" ref="hospital_management.model_hospital_patient"/>
            <field name="email_from">{{ user.email }}</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="subject">Patient Card (Ref {{object.name_seq }})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.name"></t>

                        <br /><br />
                        Here is your patient card with reference
                        <br /><br />
                        Age:<t t-out="object.age"></t><br/>
                        Contact No:<t t-out="object.phone"></t>
                        <br /><br />
                        Do not hesitate to contact us if you have any question.
                    </p>
                </div>
            </field>
            <field name="report_template" ref="action_report_patient_card"/>
            <field name="report_name">Patient Card {{object.name_seq }}</field>
        </record>
    </data>
</odoo>