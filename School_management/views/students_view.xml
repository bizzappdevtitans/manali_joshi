                            </div>
                 </button>
             </div>
                   <group string="Student Personal Details"> 
                    <group col="1">
                        <field name="name"/>  
                        <field name="stui_id"/>
                        <field name="standard"/>
                        <field name="Section" widget="radio"/>
                    </group>
                        <group col="2">
                        <field name="birthdate"/>
                        <field name="birthday_month"/>
                        <field name="age"/>
                        <field name="gender" widget="radio"/>
                        <field name="email" widget="email"/>
                        <field name="phone" widget="phone"/>
                        <field name="address"/>
                    </group>
                    <group col="3">
                        <field name="photo" widget="image" width="70px" height="70px"/>
                         <field name="result_ids" />

                    </group>
                    <button name="action_browse" type="object" string="Browse Search">
                    </button>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
 </record> 

<!-- Search view for students -->

 <record id="school_student_search" model="ir.ui.view">
        <field name="name">school.students.search</field>
        <field name="model">school.students</field>
        <field name="arch" type="xml">
            <search position="inside">
             <field name="name"/>  
             <field name="stui_id"/>
             <field name="standard"/>
             <field name="Section" widget="radio"/>
             <filter string="Archived" name="name" domain="[('name', '=',False)]"/>
             <group expand="0" string="Group By">
                <filter string="gender" name="gender" context="{'group_by': 'gender'}"/>
            </group>
            <searchpanel>
                <field name="Section" enable_counters="1"/> 
                <field name="gender" enable_counters="1"/>
                <field name="standard" enable_counters="1"/>
            </searchpanel>
           </search>
        </field>
    </record>

