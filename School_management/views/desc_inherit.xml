<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- Inherit Sale order Form  -->

  <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='partner_id']" position="before">
            <field name="Customer_Type" widget="radio"/>
          </xpath>
        	<xpath expr="//field[@name='partner_id']" position="after">
        		<field name="pur_order"/>
        	</xpath>
          <xpath expr="//field[@name='payment_term_id']" position="after">
            <field name="delivery"/>
          </xpath>
            <xpath expr="//field[@name='delivery']" position="after">
            <field name="invoice_id"/>
          </xpath>
           <xpath expr="//field[@name='invoice_id']" position="after">
            <field name="project_desc"/>
          </xpath>
           <xpath expr="//field[@name='project_desc']" position="after">
            <field name="mrp_order"/>
          </xpath>
        	<xpath expr="//notebook/page/field[@name='order_line'] /tree/field[@name='product_id']" position="before">
        		<field name="saleline"/>
        	</xpath>
          <xpath expr="//notebook/page/field[@name='order_line'] /tree/field[@name='product_uom']" position="after">
            <field name="weight_ok"/>
          </xpath>
          <xpath expr="//notebook/page/field[@name='order_line'] /tree/field[@name='weight_ok']" position="after">
            <field name="weight"/>
          </xpath>
        </field>
    </record>

<!-- so to do -->
    <record id="stock_picking_inherit" model="ir.ui.view">
        <field name="name">stock.picking.inherit.view.custom</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='partner_id']" position="after">
            <field name="delivery"/>
          </xpath>
          <xpath expr="//field[@name='delivery']" position="after">
            <field name="Customer_Type" readonly="1"/>
          </xpath>
          <xpath expr="//field[@name='delivery']" position="before">
            <field name="pur_order"/>
          </xpath>
          <xpath expr="//notebook/page[@name='operations']/field[@name='move_ids_without_package'] /tree/field[@name='product_uom_qty']" position="after">
            <field name="weight"/>
          </xpath>
        </field>
      </record>

<!-- so to invoice -->
      <record id="account_move_inherit" model="ir.ui.view">
        <field name="name">account.move.inherit.view.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='partner_id']" position="after">
            <field name="invoice_desc"/>
          </xpath>
        </field>
      </record>

<!-- so to project -->

       <record id="project_project_inherit" model="ir.ui.view">
        <field name="name">project.project.inherit.view.custom</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='tag_ids']" position="after">
            <field name="project_desc"/>
          </xpath>
        </field>
      </record>


<!-- so to task -->

      <record id="project_task_inherit" model="ir.ui.view">
        <field name="name">project.task.inherit.view.custom</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='parent_id']" position="after">
            <field name="project_desc"/>
          </xpath>
        </field>
      </record>



<!-- so to purchase order -->

      <record id="purchase_order_inherit" model="ir.ui.view">
        <field name="name">purchase.order.inherit.view.custom</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='partner_ref']" position="after">
            <field name="pur_order"/>
          </xpath>
        </field>
      </record>


<!-- so to Manufracture order -->

      <record id="manufracture_order_inherit" model="ir.ui.view">
        <field name="name">manufracture.order.inherit.view.custom</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='bom_id']" position="after">
            <field name="mrp_order"/>
          </xpath>
        </field>
      </record>

<!--Product view inherit -->

      <record id="product_done_inherit" model="ir.ui.view">
        <field name="name">product.inherit.view.custom</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='sale_ok']" position="before">
            <field name="weight_ok"/>
            <label for="weight_ok">Weight Done</label>
          </xpath>
        </field>
      </record> 


<!--Product Template view inherit -->

      <record id="product_template_inherit" model="ir.ui.view">
        <field name="name">product.template.inherit.view.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='sale_ok']" position="before">
            <field name="weight_ok"/>
            <label for="weight_ok">Weight Done</label>
          </xpath>
        </field>
      </record> 
</odoo>

