<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   
   <record id="action_view_teacher_wizard" model="ir.actions.act_window">
        <field name="name">Teacher Level</field>
        <field name="res_model">teacher.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record> 

    <record id="teacher_wizard_view" model="ir.ui.view">
        <field name="name">Teacher Details View</field>
        <field name="model">teacher.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name_ids" widget="many2many_list"/>
                    <field name="assign"/>
                </group>
                <footer>
                    <button name="set_teacher_level" string="Update Level" class="oe_right oe_highlight"
                            type="object"/>
                    <button string="Cancel" class="oe_right" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>